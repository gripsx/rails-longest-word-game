<h1>New Game</h1>
<div class="container d-flex ">
<% @letters.each do |letter| %>
<div class="letters p-4 text-white bg-primary shadow justify-content-center"><%= letter %></div>
<% end %>
</div>

<div><p>What is the longest you can find?</p></div>
<form action="/score" method="post" data-turbo="false">
<div class="input-group mb-3">
  <input type="text" class="form-control" name="word" aria-label="Recipient's username" aria-describedby="button-addon2">
  <div class="input-group-append">
    <input class="btn btn-outline-secondary" type="submit" id="button-addon2" value="Play">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag "letters", @letters %>
  </div>
</div>
</form>
